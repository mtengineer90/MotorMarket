@model IEnumerable<MotorMarket.Models.Model>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Model</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-motorcycle"></i> &nbsp; Model Oluştur</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(x => x.Main)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Name)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(x => item.Main.Name)
            </td>
            <td>
                @Html.DisplayFor(x => item.Name)
            </td>

            <partial name="_TableButonlarPartial" model="item.Id" />

        </tr>
            }

        </table>
    </div>
</div>

