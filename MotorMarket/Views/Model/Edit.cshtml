@model MotorMarket.Models.ViewModels.ModelViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Düzenle</h1>
<h2>Model Düzenle</h2>
<form method="post" action="Edit">
    <input hidden asp-for="Model.Id"/>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Mains"> </label>
        </div>
        <div class="col-4">
            <select asp-for="Model.MainId" asp-items="Model.CSelectListItem(Model.Mains)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model.Name"> </label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Düzenle" />
        <a asp-action="Index" class="btn btn-success">Geri</a>
    </div>
</form>

