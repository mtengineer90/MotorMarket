@model MotorMarket.Models.Main
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Düzenle</h1>
<h2>Motor Düzenle</h2>
<form method="post" action="Edit">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name"> </label>
        </div>
        <div class="col-4">
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Düzenle" />
            <a asp-action="Index" class="btn btn-success">Geri</a>
        </div>

    </div>
</form>

